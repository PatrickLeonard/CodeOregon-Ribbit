<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

    <ImageView
        android:id="@+id/user_avatar"
        android:src="@drawable/avatar_empty"
        android:contentDescription="@string/content_description_empty_avatar"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
            style="@style/gridImage"/>

    <ImageView
        android:id="@+id/checkImageView"
        android:src="@drawable/avatar_selected"
        android:contentDescription="@string/content_description_check_mark"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        style="@style/gridImage"
        android:visibility="invisible"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@android:color/white"
        android:id="@+id/nameLabel"
        android:maxLines="2"
        android:padding="4dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/user_avatar"/>

</RelativeLayout>